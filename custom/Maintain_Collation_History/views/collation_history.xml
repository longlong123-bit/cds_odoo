<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="collation_history_form_view" model="ir.ui.view">
            <field name="name">collation.history.form.view</field>
            <field name="model">bill.info</field>
            <field name="arch" type="xml">
                <form edit="false" create="false" action="false">
                    <div class="oe_title">
                        <label for="billing_code" string="Invoicing Name" class="oe_edit_only"/>
                        <h1><field name="billing_code" placeholder="e.g. Kittie"/></h1>
                        <label for="bill_no"/>
                        <h3><field name="bill_no" string="伝票Ｎｏ"/></h3>
                    </div>
                    <group>
                        <field name="last_closing_date" string="日付"/>
                        <field name="billing_name" string="伝票Ｎｏ"/>
                        <!--                        <field name="" string="税転嫁"/>-->
                    </group>
                    <notebook>
                        <page name="product" string="Product">
                            <field name="bill_detail_ids" widget="section_and_note_one2many">
                                <tree edit="false">
<!--                                    <button class="o_button_line" string="" icon="fa-toggle-right" name="invoice_lines"/>-->
                                    <field name="bill_date" string="日付"/>
                                    <field name="billing_name" string="取引/内訳区分"/>  <!--I don't know field load data-->
                                    <field name="billing_code" string="得意先コード"/>
                                    <field name="billing_name" string="得意先名"/>
                                    <field name="product_default_code" string="JANコード"/> <!-- product barcode-->
                                    <field name="product_default_code"
                                           string="商品コード"/> <!-- Product default code -->
                                    <field name="product_custom_standardnumber"
                                           string="品番/型番"/>  <!-- product_custom_standardnumber-->
                                    <field name="product_maker_name" string="メーカー名"/> <!--product_maker_name-->
                                    <field name="x_product_name" string="商品名"/> <!--product name-->
                                    <field name="quantity" string="数量"/>
                                    <field name="price_unit" string="単価"/>
                                    <field name="amount_residual" string="金額"/>
                                    <field name="tax_audit" string="税率"/>
                                    <field name="tax" string="税転嫁"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>


        <record id="collation_history_tree_view" model="ir.ui.view">
            <field name="name">collation.history.tree.view</field>
            <field name="model">bill.info</field>
            <field name="arch" type="xml">
                <tree string="Collation_history" create="false" import="false">
                    <!--                    <field name="state"/>-->
                    <field name="last_closing_date" string="締切日"/>
                    <field name="bill_no" string="請求No"/>
                    <field name="last_billed_amount" string="前回請求金額" sum="Total" widget="monetary"/>
                    <field name="deposit_amount" string="入金額" sum="Total" widget="monetary"/>
                    <field name="balance_amount" string="繰越金額" sum="Total" widget="monetary"/>
                    <field name="amount_untaxed" string="御買上金額" sum="Total" widget="monetary"/>
                    <field name="tax_amount" string="消費税"/>
                    <!--                    <field name="amount_untaxed" string="請求値引額"/>-->
                    <field name="amount_total" string='今回請求金額' sum="Total" widget="monetary"/>
                    <field name="customer_other_cd" string='その他CD'/>
                    <field name="invoices_number" string='売伝枚数'/>
                </tree>
            </field>
        </record>

        <record id="collation_history_action" model="ir.actions.act_window">
            <field name="name">Collation History</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bill.info</field>
            <field name="view_mode">tree,form</field>
            <!--            <field name="view_id" ref="collation_history_tree_view"/>-->
            <field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('collation_history_tree_view')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('collation_history_form_view')})]"/>

            <!--            <field name="context">{'search_default_customer': 1, 'res_partner_search_mode': 'customer',-->
            <!--                                   'default_is_company': True, 'default_customer_rank': 1,-->
            <!--                                   'form_view_initial_mode': 'edit', 'force_detailed_view': 'true'}-->
            <!--            </field>-->
        </record>
        <menuitem id="menu_ideas" name="Collation History" sequence="10"
                  action="collation_history_action" groups="base.group_user"/>
    </data>
</odoo>