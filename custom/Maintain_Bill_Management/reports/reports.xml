<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_selection">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="user.partner_id.lang"/>
                <t t-foreach="range(1,3)" t-as="range_docs_index">
                    <t t-if="o.customer_select_invoice == 'form1'">
                        <t t-call="Maintain_Bill_Management.normal_report"/>
                    </t>
                    <t t-if="o.customer_select_invoice == 'form4'">
                        <t t-call="Maintain_Bill_Management.current_month_report"/>
                    </t>
                    <t t-if="o.customer_select_invoice == 'form2'">
                        <t t-call="Maintain_Bill_Management.yamasa_report"/>
                    </t>
                    <t t-if="o.customer_select_invoice == 'form5'">
                        <t t-call="Maintain_Bill_Management.normal_invoice_for_each_customer_report"/>
                    </t>
                </t>
                <t t-if="o.customer_select_invoice == 'form3'">
                    <t t-call="Maintain_Bill_Management.abstract_payment_report"/>
                </t>
            </t>
        </t>
    </template>
</odoo>