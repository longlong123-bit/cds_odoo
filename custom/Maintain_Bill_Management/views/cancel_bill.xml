<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record model="ir.ui.view" id="bm_cancel_bill_tree">
        <field name="name">bm.cancel.bill.tree</field>
        <field name="model">bill.header</field>
        <field name="arch" type="xml">
            <tree string="Bill Tree" class="forward_edit">
                <field name="billing_code" string="Billing Code"/>
                <field name="billing_name" string="Billing Name"/>
                <field name="last_closing_date" string="Last Closing Date"/>
                <field name="deadline" invisible="1"/>
                <field name="billing_no"/>
                <field name="invoice_id"/>
            </tree>
        </field>
    </record>

    <!-- ACTIONS -->
    <record model="ir.actions.act_window" id="actions_bm_cancel_bill">
        <field name="name">Cancel Billing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bill.header</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="bm_cancel_bill_tree"/>
        <field name="domain">
            []
        </field>
        <field name="context">{'bill_management_module': True, 'view_name': 'Cancel Billing'}</field>
    </record>
</odoo>