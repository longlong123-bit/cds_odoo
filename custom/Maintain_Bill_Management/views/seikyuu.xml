<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record model="ir.ui.view" id="bm_seikyuu_tree">
        <field name="name">bm.seikyuu.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Seikyuu" class="forward_edit">
                <field name="customer_code" string="Seikyuu Code"/>
                <field name="name" string="Seikyuu Name"/>
                <field name="last_closing_date" string="Last Closing Date"/>
                <field name="voucher_number" string="Voucher"/>
                <button name="bm_seikyuu_excerpt_button" type="object" string="Excerpt" class="btn-sm btn btn-primary"
                        attrs="{'invisible': [('voucher_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record model="ir.ui.view" id="bm_seikyuu_search">
        <field name="name">bm.seikyuu.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="replace">
                <search string="Search Partner">
                    <field name="customer_code" string="Customer Code"/>
                    <field name="name" string="Customer Name"/>
                    <field name="customer_name_kana" string="Customer Name Kana"/>
                    <field name="street" string="Address 1"/>
                    <field name="customer_phone" string="Phone"/>
                    <field name="customer_state" string='State'/>
                    <field name="customer_supplier_group_code" string='Supplier Group Code'/>
                    <field name="customer_industry_code" string='Industry Code'/>
                    <field name="customer_agent" string='Representative/Agent'/>
                    <filter string="Customers" name="customer" domain="[('customer_rank','>', 0)]"/>
                    <filter string="Vendors" name="supplier" domain="[('supplier_rank','>', 0)]"/>
                </search>
            </xpath>
        </field>
    </record>

    <!-- ACTIONS -->
    <record model="ir.actions.act_window" id="actions_bm_seikyuu">
        <field name="name">Seikyuu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="bm_seikyuu_tree"/>
        <field name="domain">
            [('is_seikyuu_place','=',True)]
        </field>
        <field name="context">{'form_view_initial_mode': 'edit', 'force_detailed_view': 'true'}</field>
    </record>

    <record id="model_action_seikyuu" model="ir.actions.server">
        <field name="name">Share</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">records.action_seikyuu()</field>
    </record>

</odoo>