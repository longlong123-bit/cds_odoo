<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- FORM VIEW -->
        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="bm_seikyuu_details_line_tree">
            <field name="name">bm.seikyuu.details.line.tree</field>
            <field name="model">seikyuu.details.line</field>
            <field name="arch" type="xml">
                <tree string="Seikyuu Details Line" editable="bottom" create="0" delete="0">
                    <field name="selected"/>
                    <field name="invoice_date" readonly="1"/>
                    <field name="invoice_no" readonly="1"/>
                    <field name="customer_code" readonly="1"/>
                    <field name="customer_name" readonly="1"/>
                    <field name="invoice_line_ids" readonly="1"/>
                    <field name="total_price" readonly="1"/>
                </tree>
            </field>
        </record>

        <!-- ACTIONS -->
        <record model="ir.actions.act_window" id="actions_bm_seikyuu_details">
            <field name="name">Seikyuu Details Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">seikyuu.details.line</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="bm_bill_tree"/>
            <field name="domain">[]</field>
            <field name="context">{'form_view_initial_mode': 'edit', 'force_detailed_view': 'true'}</field>
        </record>
    </data>
</odoo>