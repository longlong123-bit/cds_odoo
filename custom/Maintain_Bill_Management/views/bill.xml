<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record model="ir.ui.view" id="bm_bill_form">
        <field name="name">bm.bill.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Bill Form">
                <header>
                    <button name="test_button" string="Check All" type="object"/>
                    <button name="test_button" string="Uncheck All" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_code" string="Billing Code" readonly="1"/>
                        </group>
                        <group>
                            <field name="name" string="Billing Name" readonly="1"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                        </group>
                        <group>
                            <button name="test_buttonCC" string="Test Button In Sheet" type="object"
                                    class="btn btn-primary"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Detail Line">
                            <field name="account_move_ids">
                                <tree string="Detail Lines" editable="bottom" create="0" delete="0">
                                    <field name="x_studio_date_invoiced" readonly="1"/>
                                    <field name="x_studio_document_no" readonly="1"/>
                                    <field name="x_customer_code_for_search" readonly="1"/>
                                    <field name="x_studio_name" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record model="ir.ui.view" id="bm_bill_tree">
        <field name="name">bm.bill.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Bill Tree" class="forward_edit">
                <field name="customer_code" string="Billing Code"/>
                <field name="name" string="Billing Name"/>
                <field name="last_closing_date" string="Last Closing Date"/>
                <field name="voucher_number" string="Voucher"/>
                <field name="customer_except_request" invisible="1"/>
                <button name="bm_bill_excerpt_button" type="object" string="Excerpt" class="btn-sm btn btn-primary"
                        attrs="{'invisible': ['|',('customer_except_request','=',False),('voucher_number','=',0)]}"/>
                <field name="deadline" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- ACTIONS -->
    <record model="ir.actions.act_window" id="actions_bm_bill">
        <field name="name">Billing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="bm_bill_tree"/>
        <field name="domain">
            [('is_billing_place','=',True)]
        </field>
        <field name="context">{'bill_management_module': True}</field>
    </record>

    <record id="model_action_bill" model="ir.actions.server">
        <field name="name">Share</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">records.action_bill()</field>
    </record>

</odoo>