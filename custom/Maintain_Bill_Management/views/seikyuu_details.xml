<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- FORM VIEW -->
        <record model="ir.ui.view" id="bm_seikyuu_details_form">
            <field name="name">bm.seikyuu.details.form</field>
            <field name="model">seikyuu.details</field>
            <field name="arch" type="xml">
                <form string="Seikyuu Details Form">
                    <header>
                        <button name="test_button" string="Test Button Header" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="seikyuu_code"/>
                            </group>
                            <group>
                                <field name="seikyuu_name"/>
                            </group>
                            <group>
                                <field name="deadline"/>
                            </group>
                            <group>
                                <button name="test_button" string="Test Button In Sheet" type="object"
                                        class="btn btn-primary"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Invoice Line">
                                <field name="seikyuu_details_line" widget="section_and_note_one2many" nolabel="1">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="selected"/>
                                        <field name="invoice_date" readonly="1"/>
                                        <field name="invoice_no" readonly="1"/>
                                        <field name="customer_code" readonly="1"/>
                                        <field name="customer_name" readonly="1"/>
                                        <field name="invoice_line_ids"/>
                                        <field name="total_price" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTIONS -->
        <record model="ir.actions.act_window" id="actions_bm_seikyuu_details">
            <field name="name">Seikyuu Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">seikyuu.details</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="bm_bill_tree"/>
            <field name="domain">[]</field>
            <field name="context">{'form_view_initial_mode': 'edit', 'force_detailed_view': 'true'}</field>
        </record>

        <menuitem id="menu_bill_management" parent="menu_bm_seikyuu" name="Seikyuu List" sequence="11"
                  action="actions_bm_seikyuu_details"/>
    </data>
</odoo>