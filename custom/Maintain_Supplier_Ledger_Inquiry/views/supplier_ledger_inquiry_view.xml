<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<!-- list tree -->
		<record model="ir.ui.view" id="supplier_ledger_inquiry_tree">
			<field name="name">supplier_ledger_inquiry_tree</field>
			<field name="model">supplier.ledger</field>
			<field name="arch" type="xml">
				<tree create="0" import="0">
					<field name="date" />
					<field name="move_name"/>
					<field name="invoice_line_type"/>
					<field name="partner_id"/>
					<field name="partner_name"/>
					<field name="jan_code"/>
					<field name="product_id"/>
					<field name="product_model"/>
					<field name="maker_name"/>
					<field name="product_name"/>
					<field name="quantity" sum="Total Quantity"/>
					<field name="price_unit" sum="Total Price Unit"/>
					<field name="price_subtotal" sum="Total Price"/>
					<field name="payment_amount" sum="Total Payment Amount"/>
					<field name="tax_base_amount" sum="Total Tax Amount"/>
					<field name="tax_transfer"/>
					<field name="slip_total" sum="Slip Total" class="slip_total"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_supplier_ledger_inquiry">
			<field name="name">Supplier Ledger Inquiry</field>
			<field name="res_model">supplier.ledger</field>
			<field name="view_id" ref="supplier_ledger_inquiry_tree"/>
			<field name="context">{'supplier_ledger_inquiry_module': True}</field>
			<field name="view_mode">tree</field>
		</record>
	
		<menuitem id="menu_supplier_ledger_inquiry" parent="Maintain_Income_Payment.parent_menu_master" name="Supplier Ledger Inquiry" sequence="11"
                  action="action_supplier_ledger_inquiry" groups="base.group_user"/>
    </data>
</odoo>
