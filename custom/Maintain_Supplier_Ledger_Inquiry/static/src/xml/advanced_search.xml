<?xml version="1.0" encoding="utf-8"?>
<!-- webpage record -->
<template>
    <t t-name="supplier_ledger_inquiry.advanced_search">
      <table>
          <tr>
            <th>対象月</th>
            <td>
              <input class="filter-item" data-operator="ilike" data-name="target_month" type="month"/>
            </td>
          </tr>
          <tr>
            <th>請求先</th>
            <td>
              <input class="filter-item" data-operator="gte" data-name="customer_code_bill_from"/>
            </td>
            <td><span>～</span></td>
            <td>
              <input class="filter-item" data-operator="lte" data-name="customer_code_bill_to"/>
            </td>
          </tr>
          <tr>
            <th>事業部</th>
            <td>
              <input class="filter-item" data-operator="ilike" data-name="division" type="number"/>
            </td>
          </tr>
          <tr>
            <th>営業担当者</th>
            <td>
              <input class="filter-item" data-operator="ilike" data-name="sales_rep" type="number"/>
            </td>
          </tr>
          <tr>
            <th>取引先グループ</th>
            <td>
              <input class="filter-item" data-operator="ilike" data-name="customer_supplier_group_code"/>
            </td>
          </tr>
        </table>
    </t>
</template>
