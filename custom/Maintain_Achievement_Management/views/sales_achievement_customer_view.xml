<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record model="ir.ui.view" id="sales_achievement_view_customer">
			<field name="name">sales_achievement_view_customer</field>
			<field name="model">sales.achievement.customer</field>
			<field name="arch" type="xml">
				<tree create="0" import="0">
					<field name="hr_employee_employee_code"/>
					<field name="hr_employee_name"/>
					<field name="res_partner_customer_code"/>
					<field name="res_partner_name"/>
					<field name="sum_pay_amount_final" sum="Total" optional="show"/>
					<field name="sum_return_amount_final" sum="Total" optional="show"/>
					<field name="sum_discount_amount_final" sum="Total" optional="show"/>
					<field name="net_sale_amount_final" sum="Total" optional="show"/>
					<field name="gross_amount_final" sum="Total" optional="show"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="actions_sales_achievement_customer">
			<field name="name">Sales Achievement Customer</field>
			<field name="res_model">sales.achievement.customer</field>
			<field name="view_id" ref="sales_achievement_view_customer"/>
			<field name="context">{'sales_achievement_customer': True}</field>
			<field name="view_mode">tree</field>
		</record>

		<menuitem id="sales_achievement_customer" parent="sales_achievement_menu" name="Sales Achievement Customer" sequence="2" action="actions_sales_achievement_customer" groups="base.group_user"/>
	</data>
</odoo>
