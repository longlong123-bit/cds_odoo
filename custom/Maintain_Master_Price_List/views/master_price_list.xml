<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="master_price_list_tree">
            <field name="name">master.price.list.tree</field>
            <field name="model">master.price.list</field>
            <field name="arch" type="xml">
                <tree string="Price List Tree" class="forward_edit">
                    <field name="maker_id"/>
                    <field name="maker_code" invisible="1"/>
                    <field name="maker_name"/>
                    <field name="product_class_code_lv1"/>
                    <field name="product_class_name_lv1"/>
                    <field name="product_class_code_lv2"/>
                    <field name="product_class_name_lv2"/>
                    <field name="product_class_code_lv3"/>
                    <field name="product_class_name_lv3"/>
                    <field name="product_class_code_lv4"/>
                    <field name="product_class_name_lv4"/>
                    <field name="jan_code"/>
                    <field name="product_code"/>
                    <field name="standard_number"/>
                    <field name="product_name"/>
                    <field name="country_state_code"/>
                    <field name="country_state_name"/>
                    <field name="industry_code"/>
                    <field name="industry_name"/>
                    <field name="supplier_group_code"/>
                    <field name="supplier_group_name"/>
                    <field name="customer_code_bill"/>
                    <field name="customer_name_bill"/>
                    <field name="customer_code"/>
                    <field name="customer_name"/>
                    <field name="recruitment_price"/>
                    <field name="rate"/>
                    <field name="price_applied"/>
                    <field name="date_applied"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record model="ir.ui.view" id="master_price_list_form">
            <field name="name">master.price.list.form</field>
            <field name="model">master.price.list</field>
            <field name="arch" type="xml">
                <form string="Price List Form" duplicate="false" class="custom_template">
                    <sheet>
                        <!-- Row 1 -->
                        <group>
                            <!-- Left Column -->
                            <group>
                                <!-- Maker （メーカー） -->
                                <field name="maker_id" context="{'showcode': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="maker_code" invisible="1"/>
                                <field name="maker_name" readonly="True"/>
                            </group>

                            <!-- Right Column -->
                            <group>
                                <!-- Country State （地区） -->
                                <field name="country_state_code" context="{'show_code': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="country_state_name" readonly="True"/>
                            </group>
                        </group>

                        <!-- Row 2 -->
                        <group>
                            <!-- Left Column -->
                            <group>
                                <!-- Main Category （大分類） -->
                                <field name="product_class_code_lv1" domain="[('product_level', '=', 'lv1')]" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="product_class_name_lv1" readonly="True"/>

                                <!-- Middle Category （中分類） -->
                                <field name="product_class_code_lv2" domain="[('product_level', '=', 'lv2')]" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="product_class_name_lv2" readonly="True"/>

                                <!-- Middle Small Category （中小分類） -->
                                <field name="product_class_code_lv3" domain="[('product_level', '=', 'lv3')]" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="product_class_name_lv3" readonly="True"/>

                                <!-- Small Category （小分類） -->
                                <field name="product_class_code_lv4" domain="[('product_level', '=', 'lv4')]" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="product_class_name_lv4" readonly="True"/>
                            </group>

                            <!-- Right Column -->
                            <group>
                                <!-- Industry （業種） -->
                                <field name="industry_code" context="{'showcode': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="industry_name" readonly="True"/>

                                <!-- Supplier Group （取引先グループ） -->
                                <field name="supplier_group_code" context="{'showcode': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="supplier_group_name" readonly="True"/>

                                <!-- Customer Code Bill （請求先） -->
                                <field name="customer_code_bill" context="{'showcode': 'ok'}" domain="[('billing_liabilities_flg', '=', True)]" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="customer_name_bill" readonly="True"/>

                                <!-- Customer Code （得意先） -->
                                <field name="customer_code" context="{'showcode': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>
                                <field name="customer_name" readonly="True"/>
                            </group>
                        </group>

                        <!-- Row 3 -->
                        <group>
                            <!-- Left Column -->
                            <group>
                                <!-- Jan Code （JANコード） -->
                                <field name="jan_code" context="{'show_jan_code': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>

                                <!-- Product Code （商品コード） -->
                                <field name="product_code" context="{'show_code': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>

                                <!-- Standard Number （品番 / 型番） -->
                                <field name="standard_number" context="{'show_standard_number': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>

                                <!-- Product Name （商品名） -->
                                <field name="product_name" readonly="True"/>
                            </group>

                            <!-- Right Column -->
                            <group>
                                <!-- Recruitment Price （採用価格） -->
                                <field name="recruitment_price" context="{'show_product_price': 'ok'}" options="{'always_reload': True, 'no_create': True, 'no_edit': True, 'no_open': True,}"/>

                                <!-- Rate （掛率） -->
                                <field name="rate"/>

                                <!-- Price Applied （適用売価） -->
                                <field name="price_applied"/>

                                <!-- Date Applied （適用年月日） -->
                                <field name="date_applied"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTIONS -->
        <record id="actions_master_price_list" model="ir.actions.act_window">
            <field name="name">Master Price List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">master.price.list</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="master_price_list_tree"/>
            <field name="context">{'master_price_list': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Master Price List
                </p>
            </field>
        </record>
    </data>
</odoo>