<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_history_payment_custom_search" model="ir.ui.view">
        <field name="name">account.payment.custom.search</field>
        <field name="model">account.payment</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search>
                <field name="document_no" string="Document No"/>
                <field name="payment_date" string="Transaction Date"/>
                <field name="partner_id" string="Business Partner"/>
                <field name="sales_rep" string="Sales Rep"/>
            </search>
        </field>
    </record>
    <record id="view_history_payment_custom_tree" model="ir.ui.view">
        <field name="name">account.payment.custom.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="mode">primary</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="History Payment" multi_edit="1" duplicate="false" class="forward_edit" create="false">
                    <field name="state" readonly="True" invisible="1"/>
                    <field name="payment_date" string="Transaction Date"/>
                    <field name="document_no" string="Document No"/>
                    <field name="partner_id" string="Business Partner"/>
                    <field name="partner_payment_name1"/>
                    <field name="vj_c_payment_category" string="vj_c_payment_category" required="True"/>
                    <field name="payment_amount" string="Payment Amount"/>
                    <field name="description" string="Description"/>
                </tree>
            </xpath>
        </field>
    </record>
    <record id="history_payment_action" model="ir.actions.act_window">
        <field name="name">History Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_history_payment_custom_tree"/>
        <field name="search_view_id" ref="view_history_payment_custom_search"/>
    </record>
    <menuitem id="history_payment" parent="menu_ideas" name="History Payment" action="history_payment_action" />
    <data>
        <!-- Sequences for account.payment -->
        <record id="seq_history_payment" model="ir.sequence">
            <field name="name">History Payment</field>
            <field name="code">account.payment</field>
            <field name="padding">7</field>
            <field name="number_next">1000000</field>
            <field name="prefix">ARR-</field>
        </record>
    </data>
</odoo>
