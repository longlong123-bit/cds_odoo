<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!--		treeview-->
		    <record id="receipt_tree_view" model="ir.ui.view">
				<field name="name">many.payment.tree</field>
				<field name="model">many.payment</field>
				<field name="arch" type="xml">
					<tree string="Product" class="forward_edit">
						<field name="name" string="Name"/>
					</tree>
				</field>
			</record>

		<!--filter search-->
		<record id="receipt_tree_filter" model="ir.ui.view">
            <field name="name">Module 1</field>
			<field name="model">many.payment</field>
			<field name="arch" type="xml">
                <search>
					<field name="name" string="Name"/>
                </search>
            </field>
        </record>



		<!-- Main form -->
		<record model="ir.ui.view" id="edit_receipt_divide">
			<field name="name">Module 1 </field>
			<field name="model">many.payment</field>
			<field name="arch" type="xml">
                <form string="Many Payment">
                    <header>
<!--                        <button name="post" class="oe_highlight" states="draft" string="Confirm" type="object"/>-->
<!--&lt;!&ndash;                        <button name="action_draft" class="btn btn-secondary" attrs="{'invisible': [('state', '=', 'draft')]}" string="Reset To Draft" type="object"/>&ndash;&gt;-->
<!--                        <button name="cancel" states="draft" string="Cancel" type="object"/>-->
                    </header>
                    <table class="custom-form-table cols-8">
                        <tbody>
                            <tr>
                                <td class="o_td_label">
                                    <tr>
                                        <td class="o_td_label"><label for="payment_date" string="Transaction Date*"/></td>
                                        <td colspan="2"><field name="payment_date" required="True"/></td>
                                    </tr>
                                    <tr>
                                        <td class="o_td_label"><label for="sales_rep" string="Sales Rep	*"/></td>
                                        <td colspan="2"><field name="sales_rep" required="True"/></td>
                                    </tr>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                    <notebook>
                        <page name="many_payment_line" string="ManyPaymentLine">
                            <field name="many_payment_line_ids" widget="section_and_note_one2many" context="{'default_payment_date' : payment_date}">
<!--                                   attrs="{'readonly': ['|', ('id', '=', True), ('state', '!=', 'draft')]}">-->
                                <tree editable="bottom">
<!--                                    <control>-->
<!--                                        <create name="add_product_control" string="Add a line"/>-->
<!--                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>-->
<!--                                    </control>-->
                                    <field name="payment_date"/>
                                    <field name="partner_id" required="True"/>
                                    <field name="partner_payment_name1"/>
                                    <field name="vj_c_payment_category" string="vj_c_payment_category" required="True"/>
                                    <field name="payment_amount" string="Payment Amount" required="True"/>
                                    <field name="description" string="Description"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="journal_id" invisible="1"/>
                                    <field name="amount" invisible="1"/>
                                    <field name="payment_method_id" string="Payment Method" invisible="1"/>
                                    <field name="state" string="state" invisible="1"/>
                                    <field name="payment_type" string="Payment Amount" invisible="1"/>

                                </tree>
                          </field>
                        </page>
                    </notebook>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="many_payment_action">
            <field name="res_model">many.payment</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem id="many_payment" parent="menu_ideas" name="Many Payment Custom" action="many_payment_action"/>

    </data>
</odoo>
