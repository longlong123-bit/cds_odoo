<?xml version="1.0" encoding="utf-8"?>
<!-- webpage record -->
<template>
    <t t-name="invoice_history.advanced_search">
        <table>
            <tr>
                <th>条件</th>
                <td>
                    <select class="filter-item" data-operator="like" data-name="search_category" style="height:25px;">
                        <option value="like">あいまい検索</option>
                        <option value="equal">完全一致</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>売上伝票No</th>
                <td>
                    <input class="filter-item" data-operator="gte" data-name="move_id.x_studio_document_no"/>
                </td>
                <td>
                    <span>～</span>
                </td>
                <td>
                    <input class="filter-item" data-operator="lte" data-name="move_id.x_studio_document_no"/>
                </td>
            </tr>
            <tr>
                <th>売上日付</th>
                <td>
                    <input class="filter-item" data-operator="gte" data-name="date" type="date"/>
                </td>
                <td>
                    <span>～</span>
                </td>
                <td>
                    <input class="filter-item" data-operator="lte" data-name="date" type="date"/>
                </td>
            </tr>
            <tr>
                <th>得意先コード</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="partner_id"/>
                </td>
            </tr>
            <tr>
                <th>得意先名</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="partner_id.name"/>
                </td>
            </tr>
            <tr>
                <th>入力担当者</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="move_id.x_userinput_id"/>
                </td>
            </tr>
            <tr>
                <th>地区コード</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="partner_id.customer_state"/>
                </td>
            </tr>
            <tr>
                <th>取引先グループコード</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="partner_id.customer_supplier_group_code"/>
                </td>
            </tr>
            <tr>
                <th>業種コード</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="partner_id.customer_industry_code"/>
                </td>
            </tr>
            <tr>
                <th>取引区分コード</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="partner_id.customer_trans_classification_code"/>
                </td>
            </tr>
            <tr>
                <th>商品コード</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="product_code"/>
                </td>
            </tr>
            <tr>
                <th>JAN/UPC/EANコード</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="product_barcode"/>
                </td>
            </tr>
            <tr>
                <th>品番/規格</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="invoice_custom_standardnumber"/>
                </td>
            </tr>
            <tr>
                <th>メーカー名</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="product_maker_name"/>
                </td>
            </tr>
            <tr>
                <th>商品名</th>
                <td>
                    <input class="filter-item" data-operator="ilike" data-name="product_name"/>
                </td>
            </tr>
        </table>
    </t>
</template>
