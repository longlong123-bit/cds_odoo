<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences for sale.order -->
        <record id="seq_document_no" model="ir.sequence">
            <field name="name">Document Seq</field>
            <field name="code">document.sequence</field>
            <field name="prefix">ARI-</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for bill.info -->
        <record id="seq_bill_no" model="ir.sequence">
            <field name="name">Bill Seq</field>
            <field name="code">bill.sequence</field>
            <field name="prefix">SEI-</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="False" name="company_id"/>
            <field name="padding">7</field>
        </record>

        <!-- Sequences for bill.info.draft -->
        <record id="seq_bill_no_draft" model="ir.sequence">
            <field name="name">Bill Draft Seq</field>
            <field name="code">bill.draft.sequence</field>
            <field name="prefix">SEI-</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="False" name="company_id"/>
            <field name="padding">7</field>
        </record>
    </data>
</odoo>
