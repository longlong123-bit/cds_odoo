<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_plan_report">
        <t t-call="web.html_container">
            <t t-call="Maintain_Payment_Plan.payment_plan_report_document"/>
        </t>
    </template>
    <template id="payment_plan_report_document">
            <div class="page" style="page-break-before: always;">
                <div style="text-align: center">
                    <div style="display: inline-block; width: 49%; text-align: center; font-size: 28px">
                        <h4 style="border-bottom: 2px solid #000; padding: 0 0 5px 0; display: inline">請 求 履 歴 照 会</h4></div>
                </div>

                <!-- HEADER OF CONTENT -->
                <div style="margin-top: 30px;">
                    <!-- LEFT -->
                    <div style=" font-size: 20px">
                        <div style="width: 100%;padding: 0 0 5px 0;">
                            <span style="float: left; border-bottom: 1px solid #0100f7; width: 35%;">検索条件</span>
                        </div>
                    </div>

                    <t>
                        <div style=" font-size: 18px; display: inline-block; width: 100%; padding-left: 30px;">
                            <t t-if="docs._compute_data()[0]['payment_date_name']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                            <t t-if="docs._compute_data()[0]['payment_plan_date_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                            <t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t><t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t><t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t><t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                            <t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                            <t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                            <t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                            <t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                            <t t-if="docs._compute_data()[0]['billing_code_gte']">
                                <div style="text-align: left;">
                                    <span>請求先コード： </span>
                                    <t t-esc="docs._compute_data()[0]['billing_code_gte']"/>
                                </div>
                            </t>
                        </div>
                    </t>

                    <!-- TABLE -->
                    <div class="content-table" style="border: 1px solid #000; margin-top: 15px">
                        <table border="0" cellspacing="0" style="width: 100%; font-size: 15px;">
                            <thead>
                                <tr>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: left; background-color: #e0e0e0"
                                        name="th_id">回収日</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: left; background-color: #e0e0e0"
                                        name="th_id">請求先コード</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0; min-width: 100px"
                                        name="th_subtotal">請求先名</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0; min-width: 100px"
                                        name="th_subtotal">締日（締切日）</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: left; background-color: #e0e0e0"
                                        name="th_description">担当者コード</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0"
                                        name="th_priceunit">担当者名</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0"
                                        name="th_taxes">繰越金額</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0"
                                        name="th_subtotal">当月売上額</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0"
                                        name="th_subtotal">当月消費税</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0"
                                        name="th_subtotal">当月請求額</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0"
                                        name="th_subtotal">締後入金</td>
                                    <td style="border: 1px solid #000; border-top: 0; border-right: 0; text-align: right; background-color: #e0e0e0"
                                        name="th_subtotal">回収予定額</td>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-foreach="docs._compute_data()[1]" t-as="line">
                                    <tr>
                                        <td style="border: 1px solid #000; border-top: 0; border-right: 0;  text-align: left;">
                                            <span t-esc="line[0]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[1]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[2]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: left;">
                                            <span t-esc="line[3]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[4]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[5]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[6]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[7]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[8]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[9]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[10]"/>
                                        </td>
                                        <td style="border: 1px solid #000; border-right: 0; border-top: 0; text-align: right">
                                            <span t-esc="line[11]"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </template>
