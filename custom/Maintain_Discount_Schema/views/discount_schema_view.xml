		<record model="ir.ui.view" id="discount_schema_form">
			<field name="name">Module Discount Schema</field>
			<field name="model">discount.schema</field>
			<field name="arch" type="xml">
				<form string="Form" class="discount_schema">
					<sheet>
						<group>
							<field name="client" string="Client"/>
							<field name="organization" string="Organization"/>
